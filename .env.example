# ========================================
# ZENTRYA API - Environment Configuration
# ========================================

# üéØ Application
APP_NAME=Zentrya API
APP_VERSION=1.0.0
DEBUG=False
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ADMIN_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=7

# üåê Server
HOST=0.0.0.0
PORT=8000

# üóÑÔ∏è Database - PostgreSQL
DATABASE_URL=postgresql+psycopg2://postgres:your_db_password@localhost:5432/zentrya_db
DB_ECHO=False

# üî¥ Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_EXPIRATION=3600

# üîí CORS
ALLOWED_ORIGINS=https://zentrya.africa,https://admin.zentrya.africa,http://localhost:5173

# üì¶ File Storage
STORAGE_TYPE=hybrid   # Options: local, s3, hybrid
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5368709120  # 5GB

# ‚òÅÔ∏è Cloudflare R2 Configuration (Videos & Trailers)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=zentrya-media
R2_PUBLIC_URL=https://your_r2_public_url  # e.g., https://zentrya-media.your_r2_account_id.r2.cloudflarestorage.com
R2_ENDPOINT=  # Leave empty to auto-generate from R2_ACCOUNT_ID

# üî• Firebase Configuration (Images: Posters, Banners, Thumbnails)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_STORAGE_BUCKET=zentrya-app.appspot.com
FIREBASE_PROJECT_ID=your_firebase_project_id

# üìß Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_TLS=True
SMTP_SSL=False

# üì± Beem Africa SMS
BEEM_API_KEY=your_beem_api_key
BEEM_API_SECRET=your_beem_api_secret
BEEM_SENDER_ID=Zentrya Go

# üí≥ Payment Configuration
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
PESAPAL_BASE_URL=https://cybqa.pesapal.com/pesapalv3

STRIPE_PRICE_MOBILE=price_xxxxxxxxxxxxx
STRIPE_PRICE_BASIC=price_xxxxxxxxxxxxx
STRIPE_PRICE_STANDARD=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM=price_xxxxxxxxxxxxx

# üîê Admin Account (First Superuser)
FIRST_SUPERUSER_EMAIL=admin@zentrya.com
FIRST_SUPERUSER_PASSWORD=your_superuser_password

# üì± OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=15
OTP_MAX_ATTEMPTS=5

# üîê Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=True
REQUIRE_NUMBERS=True
REQUIRE_SPECIAL_CHARS=True
